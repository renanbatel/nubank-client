{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "lib": ["ES2020"],
    "types": ["reflect-metadata", "jest"],
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.setup.ts",
    "examples"
  ]
}
